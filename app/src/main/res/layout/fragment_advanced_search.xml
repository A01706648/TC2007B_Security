<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        android:contentDescription="Imagen de fondo" />

    <!-- Carta -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:cardCornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/fondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondo">

        <LinearLayout
            android:id="@+id/LayoutBotones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal">

            <!-- Dentro de la carta -->

            <androidx.cardview.widget.CardView
                android:id="@+id/TarjetaAZ"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:id="@+id/ImagenAZ"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_sort_by_alpha_24"
                    android:contentDescription="TODO" />


                <TextView
                    android:id="@+id/TextoAZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Orden alfabético"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CartaAnio"
                android:layout_width="155dp"
                android:layout_height="155dp">

                <ImageView
                    android:id="@+id/ImagenCalendario"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_date_range_24"/>


                <TextView
                    android:id="@+id/TextoAnio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Año"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutBotones2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="275dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal"
            android:gravity="left">

            <!-- Dentro de la carta -->

            <androidx.cardview.widget.CardView
                android:id="@+id/CartaMasVisto"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/ImagenEstrella"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_star_24"/>


                <TextView
                    android:id="@+id/TextoMasVisto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Los más vistos"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Búsqueda avanzada"
            android:layout_gravity="center_horizontal"
            android:textSize="28dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/Descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona una de las siguientes categorías:"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>